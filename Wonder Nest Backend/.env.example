# WonderNest Backend Environment Variables
# Copy this file to .env and update values for your environment

# Application Environment
KTOR_ENV=development
PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wondernest_dev
DB_USERNAME=wondernest_user
DB_PASSWORD=wondernest_password
DB_MAX_POOL_SIZE=20
DB_MIN_IDLE=5

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
JWT_ISSUER=wondernest-api
JWT_AUDIENCE=wondernest-users
JWT_REALM=WonderNest API
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=3600000
JWT_REFRESH_EXPIRES_IN=2592000000

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=wondernest-content-dev
AWS_S3_USER_CONTENT_BUCKET=wondernest-user-content-dev

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs
ML_SERVICE_URL=http://localhost:8081
ML_SERVICE_API_KEY=your-ml-service-key

# Feature Flags
FEATURE_EMAIL_VERIFICATION=true
FEATURE_MFA_ENABLED=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=your-sentry-dsn

# Development Tools
LOG_LEVEL=INFO
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080